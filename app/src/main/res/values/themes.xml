<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.ChatApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Disable automatic tint on buttons -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryContainer">@color/teal_900</item>
        <item name="android:statusBarColor">@color/teal_900</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Fix Material 3 button tint -->
        <item name="android:buttonStyle">@style/CustomButton</item>
    </style>

    <style name="Theme.ChatApp" parent="Base.Theme.ChatApp" />

    <!-- Custom Button Style -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/stylish_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">10dp</item>
    </style>

</resources>
